{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": false,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": true,
        "rootDirs": [
            "dist/",
            "src/"
        ],
        "outDir": "dist/",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
